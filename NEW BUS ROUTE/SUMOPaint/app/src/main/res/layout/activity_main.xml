    <TableLayout
        android:id="@+id/tableLayoutLogos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/horizontal_margin_small"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="8dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow android:weightSum="1.0">

            <Button
                android:id="@+id/buttonHelloSUMO"
                android:layout_width="10dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="@string/hello_world"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonGoodbyeSUMO"
                android:layout_width="10dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Close Server"
                android:textSize="20sp" />

            <Button
                android:id="@+id/refresh"
                android:layout_width="10dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Refresh"
                android:textSize="20sp" />


        </TableRow>

        <TableRow android:weightSum="1.0">


            <TextView
                android:id="@+id/server_connect"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Not Connected"
                android:textColor="@color/colorPrimary"
                android:textSize="28sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imageViewMonash"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:contentDescription="@string/imageView_Monash_University_logo_description"
                android:src="@drawable/monash_logo_mono" />

        </TableRow>

    </TableLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
