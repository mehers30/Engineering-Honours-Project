<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableLayout
        android:id="@+id/titletable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_below="@+id/relativeLayoutPaintTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/vertical_margin_small"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:layout_marginStart="@dimen/horizontal_margin_small"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        android:layout_marginEnd="@dimen/horizontal_margin_small">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_colour"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>


    <TableLayout
        android:id="@+id/tableLayoutColourButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_below="@+id/titletable"
        android:layout_above="@+id/tableLayoutLogos"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/vertical_margin_small"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:layout_marginStart="@dimen/horizontal_margin_small"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        android:layout_marginEnd="@dimen/horizontal_margin_small">

        <TableRow
            android:weightSum="1.0"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <Spinner
                android:id="@+id/spinners"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <Button
                android:id="@+id/buttongo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="right"
                android:layout_weight="0.33"
                android:text="GO"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />


        </TableRow>

        <TableRow
            android:layout_height="117dp"
            android:weightSum="1.0">

            <Button
                android:id="@+id/buttonRed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.33"
                android:text="@string/colour_red"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buttonOrange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.33"
                android:text="@string/colour_orange"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buttonYellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.33"
                android:text="@string/colour_yellow"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

        </TableRow>

        <TableRow
            android:weightSum="1.0">

            <Button
                android:id="@+id/buttonGreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.33"
                android:text="@string/colour_green"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buttonBlue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.33"
                android:text="@string/colour_blue"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buttonPurple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.33"
                android:text="@string/colour_purple"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />


        </TableRow>


        <TableRow>
            android:weightSum="1.0">
            <TextView
                android:id="@+id/textinput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Testing"
                android:textColor="@color/colorPrimary"
                android:textSize="28sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>
            android:weightSum="1.0">

            <TextView
                android:id="@+id/server_connection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEST"
                android:textColor="@color/colorPrimary"
                android:textSize="28sp"
                android:textStyle="bold" />
        </TableRow>


    </TableLayout>

